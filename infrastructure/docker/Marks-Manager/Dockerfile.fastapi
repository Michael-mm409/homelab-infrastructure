FROM python:3.11-slim

# Minimal image for running FastAPI (Uvicorn)
ENV PYTHONUNBUFFERED=1

WORKDIR /app

# Install runtime dependencies
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Copy app sources
COPY . .

# Expose internal uvicorn port
EXPOSE 8000

# Run Uvicorn directly (compose can override command if needed)
CMD ["uvicorn", "src.app.main:app", "--host", "0.0.0.0", "--port", "8000", "--proxy-headers", "--workers", "2"]
